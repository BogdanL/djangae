[flake8]

ignore =
    # E111, E114, E116, E123, E226 (indentation errors)
    E111, E114, E116, E123, E226,
    # E121, E124, E125, E126, E127, E128, E129 (continuation line indentation)
    E121, E124, E125, E126, E127, E128, E129,
    # E201, E202 (whitespace after '[' and whitespace before ']')
    E201, E202,
    # E203 (whitespace before ':')
    E203,
    # E222 (multiple spaces after operator)
    E222,
    # E225 (missing whitespace around operator)
    E225,
    # E231 (no whitespace after ',')
    E231,
    # E241 (multiple spaces after ':')
    E241,
    # E261 (not enough whitespace before inline comment)
    E261,
    # E262 (inline comment should start with '# ')
    E262,
    # E265 (block comment should start with '#')
    E265,
    # E266 (too many '#' leading comment)
    E266,
    # E271, E272 (multiple spaces after/before keyword)
    E271, E272,
    # E301, E302, E303, E305, E306, W292, W293, W391 (wrong number of blank lines)
    E301, E302, E303, E305, E306, W292, W293, W391,
    # E401 (multiple imports on one line)
    E401,
    # E402 (module-level import not at top of file)
    E402,
    # E703 (statement ends with semicolon)
    E703,
    # E704 (multiple statements on one line)
    E704,
    # E711, E712, E714 (direct compare to False/None should be use if not cond: or if cond is not False/None)
    E711, E712, E714,
    # E713 (test should be 'not in')
    E713,
    # E731 (use def instead of lambda function)
    E731,
    # F401 (module imported but never used)
    F401,
    # F402 (import shadowed by loop variable)
    F402,
    # F403 (from X import *, unable to find undefined names)
    F403,
    # F405 (variable may be undefined)
    F405,
    # F811 (redefinition of unused symbol)
    F811,
    # F821 (undefined name)
    F821,
    # F841 (variable assigned but never used)
    F841,
    # W291 (trailing whitespace)
    W291,
    # W503 (line break before binary operator)
    W503

max-line-length = 100
